  <%= form_with model: post, url: user_post_path(user, post) do |form| %>
    <% if post.errors.any? %>
      <div class="alert alert-warning">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, class: "form-label" %><br />
      <%= form.text_field :title, autofocus: true, autocomplete: "title", class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "form-label" %><br />
      <%= form.text_area :description, class:"form-control"  %>
    </div>

    <div class="field">
      <%= form.label :status, class: "form-label" %><br />
      <%= form.select :status, Post.status.values %>
    </div>

    <div>
      <%= form.submit class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>


